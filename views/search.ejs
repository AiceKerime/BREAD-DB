<h2>Filter</h2>

<form>
    <div>
        <div class="flex-container">
            <label class=" ">
                <input id="checkbox" type="checkbox" aria-label="Checkbox for following text input" <%=query.idCheck
                    ? 'checked' : '' %>>ID
            </label>
            <div class="space-8">
                <input id="Id" class="input-search" type="text" placeholder="Id" value="<%= query.id %>">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <label class=" ">
                <input id="checkbox" type="checkbox" aria-label="Checkbox for following text input" <%=query.stringCheck
                    ? 'checked' : '' %>>String
            </label>
            <div class="space-8">
                <input id="String" class="input-search" type="text" placeholder="String" value="<%= query.string %>">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <label class="">
                <input id="checkbox" type="checkbox" aria-label="Checkbox for following text input"
                    <%=query.integerCheck ? 'checked' : '' %>>Integer
            </label>
            <div class="space-8">
                <input id="Integer" class="input-search" type="number" placeholder="Integer"
                    value="<%= query.integer %>">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <label class="">
                <input id="checkbox" type="checkbox" aria-label="Checkbox for following text input" <%=query.floatCheck
                    ? 'checked' : '' %>>Float
            </label>
            <div class="space-8">
                <input id="Float" class="input-search" type="number" step="0.005" placeholder="Float"
                    value="<%= query.float %>">
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <label class="">
                <input id="checkbox" type="checkbox" aria-label="Checkbox for following text input" <%=query.dateCheck
                    ? 'checked' : '' %>>Date
            </label>
            <div id="Date" class="space-8">
                <input class="input-search date-input" type="date" placeholder="Date" /> <br>to<br>
                <input class="input-search date-input" type="date" placeholder="Date" />
            </div>
        </div>
    </div>
    <br>

    <div>
        <div class="flex-container">
            <label class="">
                <input id="checkbox" type="checkbox" aria-label="Checkbox for following text input"
                    <%=query.booleanCheck ? 'checked' : '' %>>Boolean
            </label>
            <div id="Boolean" class="space-8">
                <select class="input" id="exampleFormControlSelect1" placeholder="--chose the bolean--">
                    <option value="" selected disabled>-- Choose Boolean --</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
        </div>
    </div>
    <br>

    <div>
        <button id="search-button">Search</button>
    </div>
    <br>
    <br>
</form>